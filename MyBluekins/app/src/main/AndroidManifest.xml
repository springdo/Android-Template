<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.practiceapps.donal.mybluekins" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="com.practiceapps.donal.mybluekins.MyApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.practiceapps.donal.mybluekins.activities.MainActivity"
            android:label="@string/title_activity_main" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.practiceapps.donal.mybluekins.activities.SubActivity"
            android:label="@string/title_activity_sub" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.practiceapps.donal.mybluekins.activities.MainActivity" />
        </activity>
        <activity
            android:name="com.practiceapps.donal.mybluekins.activities.SettingsActivity"
            android:label="@string/action_settings" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.practiceapps.donal.mybluekins.activities.MainActivity" />
        </activity>
        <activity
            android:name="com.practiceapps.donal.mybluekins.activities.SwitchActivity"
            android:label="@string/switch_activity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.practiceapps.donal.mybluekins.activities.MainActivity" />
        </activity>
    </application>

</manifest>
